<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="helloworld"
        app:bl_pressed_textColor="@color/colorPrimary"
        app:bl_unPressed_textColor="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.mingyuechunqiu.agilemvpframe.ui.widget.PasswordClearEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bl_focused_drawable="@drawable/sign_et_bg_focused"
        app:bl_unFocused_drawable="@drawable/sign_et_bg_focus"
        app:pcet_clear_btn_is_visible="true" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        app:layout_constraintBottom_toBottomOf="parent" />
</android.support.constraint.ConstraintLayout>