<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--带密码隐藏和清除功能的输入框-->
    <declare-styleable name="PasswordClearEditText">
        <attr name="pcet_password_is_visible" format="boolean" />
        <attr name="pcet_eye_open_drawable" format="reference" />
        <attr name="pcet_eye_close_drawable" format="reference" />
        <attr name="pcet_clear_btn_is_visible" format="boolean" />
        <attr name="pcet_clear_btn_drawable" format="reference" />
        <attr name="pcet_button_padding" format="dimension" />
        <attr name="pcet_button_width" format="dimension" />
        <attr name="pcet_button_right_margin" format="dimension" />
        <attr name="pcet_btn_auto_hide" format="boolean" />
    </declare-styleable>

    <!--可下拉收回的输入框-->
    <declare-styleable name="PullDownEditText">
        <attr name="pdet_pull_down_is_visible" format="boolean" />
        <attr name="pdet_retract_drawable" format="reference" />
        <attr name="pdet_pull_down_drawable" format="reference" />
        <attr name="pdet_clear_button_is_visible" format="boolean" />
        <attr name="pdet_clear_button_drawable" format="reference" />
        <attr name="pdet_button_padding" format="dimension" />
        <attr name="pdet_button_width" format="dimension" />
        <attr name="pdet_button_right_margin" format="dimension" />
        <attr name="pdet_button_auto_hide" format="boolean" />
    </declare-styleable>

    <!--圆形进度按钮-->
    <declare-styleable name="CircleProgressButton">
        <attr name="cpb_idle_circle_color" format="color" />
        <attr name="cpb_pressed_circle_color" format="color" />
        <attr name="cpb_released_circle_color" format="color" />
        <attr name="cpb_idle_ring_color" format="color" />
        <attr name="cpb_pressed_ring_color" format="color" />
        <attr name="cpb_released_ring_color" format="color" />
        <attr name="cpb_idle_ring_width" format="dimension" />
        <attr name="cpb_pressed_ring_width" format="dimension" />
        <attr name="cpb_released_ring_width" format="dimension" />
        <attr name="cpb_idle_inner_padding" format="dimension" />
        <attr name="cpb_pressed_inner_padding" format="dimension" />
        <attr name="cpb_released_inner_padding" format="dimension" />
        <attr name="cpb_idle_ring_visible" format="boolean" />
        <attr name="cpb_pressed_ring_visible" format="boolean" />
        <attr name="cpb_released_ring_visible" format="boolean" />
        <attr name="cpb_min_progress" format="integer" />
        <attr name="cpb_max_progress" format="integer" />
        <attr name="cpb_current_progress" format="integer" />
        <attr name="cpb_is_timer_mode" format="boolean" />
        <attr name="cpb_progress_duration" format="integer" />
    </declare-styleable>

    <!--滚动ViewPager样式-->
    <declare-styleable name="ScrollViewPager">
        <!--是否可以滚动-->
        <attr name="svp_canScroll" format="boolean" />
    </declare-styleable>

    <!--按下状态容器控件-->
    <declare-styleable name="PressStateViewGroup">
        <attr name="psvg_animator_duration" format="integer" />
        <attr name="psvg_scale_x" format="float" />
        <attr name="psvg_scale_y" format="float" />
    </declare-styleable>

    <!--按下状态控件-->
    <declare-styleable name="PressStateTextView">
        <attr name="psv_animator_duration" format="integer" />
        <attr name="psv_scale_x" format="float" />
        <attr name="psv_scale_y" format="float" />
    </declare-styleable>

    <!--可推动嵌套滚动控件-->
    <declare-styleable name="PushNestedScrollView">
        <attr name="pnsv_pull_down_directly" format="boolean" />
    </declare-styleable>
</resources>