<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_agile_dfg_dark_loading_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_round_corners_4_black"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/dp_20">

    <ProgressBar
        android:id="@+id/pb_agile_dfg_dark_loading_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateDrawable="@drawable/rotate_darker_gray_to_white" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_agile_dfg_dark_loading_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="@string/prompt_loading"
        android:textColor="@android:color/white" />

</android.support.v7.widget.LinearLayoutCompat>