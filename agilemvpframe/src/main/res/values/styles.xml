<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--加载对话框显示样式-->
    <style name="Dialog_Loading" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@drawable/shape_dialog</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <!--透明背景加载对话框显示样式-->
    <style name="Dialog_Loading.Transparent" parent="Dialog_Loading">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!--带动画弹出的透明背景加载对话框显示样式-->
    <style name="Dialog_Loading.Transparent.Animation" parent="Dialog_Loading.Transparent">
        <item name="android:windowAnimationStyle">@style/PopupDialogAnim</item>
    </style>

    <!--弹出对话框动画样式-->
    <style name="PopupDialogAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_show_overshoot</item>
        <item name="android:windowExitAnimation">@anim/dialog_hide_anticipate</item>
    </style>

</resources>