<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--带密码隐藏和清除功能的输入框-->
    <declare-styleable name="PasswordClearEditText">
        <attr name="pce_password_is_visible" format="boolean" />
        <attr name="pce_eye_open_drawable" format="reference" />
        <attr name="pce_eye_eye_close_drawable" format="reference" />
        <attr name="pce_clear_btn_is_visible" format="boolean" />
        <attr name="pce_clear_btn_drawable" format="reference" />
        <attr name="pce_button_padding" format="dimension" />
        <attr name="pce_button_width" format="dimension" />
        <attr name="pce_button_right_margin" format="dimension" />
    </declare-styleable>

    <!--可下拉收回的输入框样式-->
    <declare-styleable name="PullDownEditText">
        <attr name="pullDownIsVisible" format="boolean" />
        <attr name="retractDrawable" format="reference" />
        <attr name="pullDownDrawable" format="reference" />
        <attr name="clearBtnIsVisible" format="boolean" />
        <attr name="clearBtnDrawable" format="reference" />
        <attr name="buttonPadding" format="dimension" />
        <attr name="buttonWidth" format="dimension" />
        <attr name="buttonRightMargin" format="dimension" />
    </declare-styleable>

</resources>